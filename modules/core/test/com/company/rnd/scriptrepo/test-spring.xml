<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

    <bean name="scriptRepositoryFactory" class="com.company.rnd.scriptrepo.repository.factory.ScriptRepositoryFactoryBean">
        <property name="basePackages">
            <list>
                <value>com.company.rnd.scriptrepo.core.test</value>
            </list>
        </property>
    </bean>

    <!-- Annotation-based beans -->
    <context:component-scan base-package="com.company.rnd.scriptrepo"/>

</beans>
